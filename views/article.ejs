<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blog</title>
    <!--Bootstrap-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65"
      crossorigin="anonymous"
    />
    <!--Public CSS-->
    <link rel="stylesheet" href="/css/styles.css" />
    <!--Fontawesome-->
    <script src="https://kit.fontawesome.com/de522ac2a9.js" crossorigin="anonymous"></script>
  </head>

  <body>
    <%- include("partials/navbar.ejs") %>
   
       <!--============================== SECTION: HERO ==============================-->
       <section class="hero-section bg-image" style="
       background: linear-gradient(rgba(0, 0, 0, 0.4), rgba(0, 0, 0, 0.4)),
         url('/img/articleCover_2.jpg');
       height: 35vh;
       background-size: cover;
     ">
     <div class="container h-100 ">
       <div class="row h-100 align-items-center">
         <div class="col-12 text-center text-white">
           <h1 class="text-white"><strong>
               <%= article.title %>
             </strong></h1>
           <p>Creado por <%= article.user.firstname %> <%= article.user.lastname %> el <%=
            article.createdAt.toLocaleDateString() %>
           </p>

        </div>
       </div>
     </div>
   </section>
   <!--============================== SECTION: HERO ==============================-->

    <main>
      <div class="container my-4">
        <div class="row">
          <p><%= article.content %></p>
        </div>
        <div class="row">
          <h3>Add your comment</h3>

          <form action="/article/<%= article.id %>" method="POST" id="comment-form">
            <div class="form-floating mb-3">
              <input type="text" class="form-control" id="name" name="name" placeholder="" <%=!login
              ? "disabled" : "" %> />
              <label for="name">Name...</label>
            </div>
            <div class="mb-3">
              <label for="content" class="form-label">Add your comment...</label>
              <textarea class="form-control" id="content" name="content" rows="3" <%=!login
              ? "disabled" : "" %> ></textarea
              >
            </div>
            <div class="d-grid gap-2">
              <%if (login) {%>
              <button class="btn btn-primary" type="submit">Submit</button>
            </div>
          </form>
          <%} else {%>
          <p>You must be logged to add comments.</p>
          <a class="btn btn-success" href="/login">Iniciar sesi√≥n</a>
          <%}%>
        </div>
        <div class="row">
          <h3 class="m-3">Comments(<%= commentCount%>)</h3>
          <% for (let item of comments) { %>
            <p class="font-italic">"<%=item.content%>"</p>
            <small>
              <%=item.user.firstname + " " +item.user.lastname%>
            </small>
            <% if (login && user.roleId >= 3){ %>
            <div>
              <a class="btn btn-primary btn-sm mt-1" href="/" role="button">Edtitar</a>
             <a class="btn btn-danger btn-sm mt-1" href="/" role="button">Eliminar</a>
           </div> 
           <% } %>
            <hr class="mb-4" style="border-color: #666" />
            <%}%>


        </div>
      </div>
    </main>
    <%- include("partials/footer.ejs") %>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
